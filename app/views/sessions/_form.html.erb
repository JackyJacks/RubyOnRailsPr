<%= form_for :session, url: session_path do |form| %>
  <div class="form-group input-group">
    <div class="input-group-prepend">
      <span class="input-group-text"> <i class="fa fa-envelope">Пошта</i> </span>
   </div>
      <%= form.text_field :email, type: 'email', class: "form-control", placeholder: "Електрона пошта" %>
  </div>
    
  <div class="form-group input-group">
    <div class="input-group-prepend">
      <span class="input-group-text"> <i class="fa fa-envelope">Пароль</i> </span>
   </div>
      <%= form.password_field :password, type: 'password', class: "form-control", placeholder: "Ваш пароль" %>
  </div>

  <div class="submit-field">
    <%= form.submit("Увійти", {:class => "btn btn-primary btn-block"}) %>
  </div>

  <div class="other-links text-center pt-2">
    <% if Clearance.configuration.allow_sign_up? %>
      <%= link_to "Створити аккаунт", sign_up_path %>
    <% end %>
    <%= link_to "Забули пароль?", new_password_path %>
  </div>
<% end %>
